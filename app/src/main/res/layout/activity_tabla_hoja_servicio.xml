    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:onClick="onClick"
            android:text="regresar" />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= "LISTA DE PRODUCTOS COLOCADOS"
            android:textStyle="bold"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= "*Seleccione para borrar un producto de la lista: "
            android:textStyle="italic"
            android:textSize="15sp"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text= "  CANTIDAD -   PRODUCTO"
        android:textStyle="italic"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="449dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lvLista"
            android:layout_width="fill_parent"
            android:layout_height="392dp"></ListView>


        <Button
            android:id="@+id/btnEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FF3F51B5"
            android:onClick="onClick"
            android:text="Finalizar carga"
            android:textColor="@android:color/background_light" />
    </LinearLayout>
