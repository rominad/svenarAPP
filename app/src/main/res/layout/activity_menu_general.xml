<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo3"
    android:padding="20sp"
    tools:context=".Menu.menuGeneral">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MENU GENERAL"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <Button
                    android:id="@+id/diaria"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:text="DIARIA"
                    android:layout_height="60dp"
                    android:background="#FF3F51B5"
                    android:textColor="@android:color/background_light"
                    android:onClick="onClick"
                    tools:ignore="OnClick" />

                <Button
                    android:id="@+id/hojaServicio"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:background="#FF3F51B5"
                    android:textColor="@android:color/background_light"
                    android:text="HOJA DE SERVICIO"
                    android:onClick="onClick"
                    tools:ignore="OnClick" />
                <Button
                    android:id="@+id/busquedaTurno"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:background="#FF3F51B5"
                    android:textColor="@android:color/background_light"
                    android:text="BUSQUEDA DE TURNOS POR FECHA"
                    android:layout_height="60dp"
                    android:onClick="onClick"
                    tools:ignore="OnClick" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LISTADOS:"
                    android:textColor="@color/colorBlack"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <Button
                    android:id="@+id/listadoPersonas"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:background="#FF3F51B5"
                    android:textColor="@android:color/background_light"
                    android:text="LISTADO DE CLIENTES"
                    android:layout_height="60dp"
                    android:onClick="onClick"
                    tools:ignore="OnClick" />

                <Button
                    android:id="@+id/listadoStock"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:background="#FF3F51B5"
                    android:textColor="@android:color/background_light"
                    android:text="LISTADO DE STOCK"
                    android:layout_height="60dp"
                    android:onClick="onClick"
                    tools:ignore="OnClick" />

                <Button
                    android:id="@+id/listadoTurnos"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:background="#FF3F51B5"
                    android:textColor="@android:color/background_light"
                    android:text="LISTADO DE TURNOS"
                    android:layout_height="60dp"
                    android:onClick="onClick"
                    tools:ignore="OnClick" />

                <Button
                    android:id="@+id/listadoFacturas"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:background="#FF3F51B5"
                    android:textColor="@android:color/background_light"
                    android:text="LISTADO DE FACTURAS"
                    android:layout_height="60dp"
                    android:onClick="onClick"
                    tools:ignore="OnClick" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>