                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="_ _ _ _ _ _"
                android:layout_marginBottom="18dp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de producto:"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/TipoProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="_ _ _ _ _ _"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio:"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/Precio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="_ _ _ _ _ _"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/Stock2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stock:"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/Stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="_ _ _ _ _ _"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/UnidadMedida2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unidad de Medida"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/UnidadMedida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="_ _ _ _ _ _"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/Marca2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marca:"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/Marca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="_ _ _ _ _ _"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"/>

